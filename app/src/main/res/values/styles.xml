<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HWTBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HWTModalStyle</item>
    </style>

    <style name="HWTModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="HWTTextTitleBottomSheet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HWTDialogWaiTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="HWTInputLayout">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="boxBackgroundColor">@color/background_card</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@color/accent_color</item>
    </style>
</resources>