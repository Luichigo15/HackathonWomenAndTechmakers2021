<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeMyFaithfulFriend" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HWTBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/HWTModalStyle</item>
    </style>

    <style name="HWTModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="HWTTextTitleBottomSheet">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HWTDialogWaiTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="HWTInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="boxBackgroundColor">@color/background_card</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@color/input_layout_background</item>
    </style>

    <style name="HWTEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="HWTMainButtonBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:backgroundTint">@color/accent_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="elevation">@dimen/_10sdp</item>
    </style>
</resources>